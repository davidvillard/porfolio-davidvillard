---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import ProjectIcon from "../components/icons/ProjectIcon.astro";
import Projects from "../components/Projects.astro";
import ButtonPills from "../components/ButtonPills.astro";
import CopyIcon from "../components/icons/Copy.astro";
import Skills from "../components/Skills.astro";
import SkillsIcon from "../components/icons/SkillsIcon.astro";
import UserIcon from "../components/icons/UserIcon.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Porfolio de davidvillard - Desarrollador FullStack - Galicia, España"
  description="Contrata a davidvillard."
>
  <main class="px-4">
    <SectionContainer class="pb-32 py-44" id="top">
      <img
        class="w-20 h-20 mb-4 rounded-full"
        src="/davidvillard.png"
        alt="david photo"
      />
      <h1
        class="flex flex-row justify-center pb-6 text-3xl font-bold dark:text-white text-black lg:text-5xl md:text-4xl gap-x-4 lg:pb-10"
      >
        Hola!, soy David <a
          href="https://www.linkedin.com/in/davidvillard/"
        ><div class="flex items-center justify-center">
          <!-- <Badge>Disponible para trabajar</Badge> -->
        </div></a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="dark:text-white text-black"> Apasionado por el Diseño Web en Formación.</span>
        <span class="flex items-center dark:text-yellow-200/90 text-yellow-600/90">
          Desarrollador Web Full Stack.
        </span>
        <span class="dark:text-purple-400/90 text-purple-600/90">  
          De Galicia, España.</span>
      </h2>

      <nav class="flex flex-wrap gap-4 mt-8 dark:text-white text-black">
        <SocialPill href="https://www.github.com/davidvillard">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/davidvillard/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="mailto:davidvillard6@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          davidvillard6@gmail.com
        </SocialPill>
        <ButtonPills>
          <CopyIcon />
          Copy
        </ButtonPills>

      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="flex items-center mb-16 text-3xl font-semibold gap-x-3">
        <BriefCase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="flex items-center mb-6 text-4xl font-semibold gap-x-3">
        <ProjectIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2 class="flex items-center mb-6 text-4xl font-semibold gap-x-3">
        <UserIcon class="size-7" />
        Sobre Mí
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="skills">

      <h2 class="flex items-center mb-6 text-4xl font-semibold gap-x-3">
        <SkillsIcon class="size-7" />
        Skills
      </h2>
      <Skills />
    </SectionContainer>
  </main>
</Layout>
