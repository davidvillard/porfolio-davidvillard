---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
---

<Layout 
    title="Contacto - David Villar" 
    description="¿Tienes un proyecto en mente? Contáctame y trabajemos juntos."
>
    <main class="px-4 sm:px-16">
        <SectionContainer class="pt-48 pb-24" id="contacto">
            <div class="mx-auto max-w-4xl">
                <!-- Título -->
                <div class="mb-16 text-center">
                    <h1 class="text-4xl md:text-6xl font-semibold tracking-tight dark:text-white text-gray-900 mb-4">
                        Trabajemos juntos
                    </h1>
                    <p class="text-lg md:text-xl dark:text-gray-400 text-gray-600 max-w-2xl mx-auto">
                        ¿Tienes un proyecto web en mente? 
                        <br class="hidden md:block" />Cuéntame tu idea y la convertiremos en realidad.
                    </p>
                </div>

                <!-- Grid de información y formulario -->
                <div class="grid md:grid-cols-5 gap-12 items-start">
                    
                    <!-- Columna izquierda: Info de contacto -->
                    <div class="md:col-span-2 space-y-8">
                        <div class="space-y-6">
                            <!-- Email -->
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 rounded-full dark:bg-white/5 bg-black/5 flex items-center justify-center">
                                    <svg class="w-6 h-6 dark:text-purple-400 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold dark:text-white text-gray-900 mb-1">Email</h3>
                                    <a href="mailto:davidvillard6@gmail.com" class="dark:text-gray-400 text-gray-600 hover:text-purple-600 dark:hover:text-purple-400 transition">
                                        davidvillard6@gmail.com
                                    </a>
                                </div>
                            </div>

                            <!-- Ubicación -->
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 rounded-full dark:bg-white/5 bg-black/5 flex items-center justify-center">
                                    <svg class="w-6 h-6 dark:text-purple-400 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold dark:text-white text-gray-900 mb-1">Ubicación</h3>
                                    <p class="dark:text-gray-400 text-gray-600">Galicia, España</p>
                                </div>
                            </div>

                            <!-- Redes sociales -->
                            <div class="pt-6 border-t dark:border-white/10 border-black/10">
                                <h3 class="font-semibold dark:text-white text-gray-900 mb-4">Sígueme</h3>
                                <div class="flex gap-3">
                                    <a 
                                        href="https://github.com/davidvillard" 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        aria-label="GitHub"
                                        class="w-10 h-10 rounded-full dark:bg-white/5 bg-black/5 flex items-center justify-center hover:scale-110 dark:hover:bg-white/10 hover:bg-black/10 transition"
                                    >
                                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
                                        </svg>
                                    </a>
                                    <a 
                                        href="https://www.linkedin.com/in/davidvillard/" 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        aria-label="LinkedIn"
                                        class="w-10 h-10 rounded-full dark:bg-white/5 bg-black/5 flex items-center justify-center hover:scale-110 dark:hover:bg-white/10 hover:bg-black/10 transition"
                                    >
                                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Columna derecha: Formulario -->
                    <div class="md:col-span-3">
                        <form 
                            id="contact-form" 
                            action="https://formspree.io/f/xovgnjwl" 
                            method="POST"
                            class="space-y-6"
                        >
                            <div class="grid md:grid-cols-2 gap-6">
                                <div class="space-y-2">
                                    <label for="name" class="block text-sm font-medium dark:text-white text-gray-900">
                                        Nombre
                                    </label>
                                    <input 
                                        type="text" 
                                        id="name" 
                                        name="name" 
                                        required 
                                        class="w-full px-4 py-3 rounded-lg dark:bg-white/5 bg-black/5 border dark:border-white/10 border-black/10 dark:text-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 transition"
                                        placeholder="Tu nombre"
                                    />
                                </div>
                                
                                <div class="space-y-2">
                                    <label for="email" class="block text-sm font-medium dark:text-white text-gray-900">
                                        Email
                                    </label>
                                    <input 
                                        type="email" 
                                        id="email" 
                                        name="email" 
                                        required 
                                        class="w-full px-4 py-3 rounded-lg dark:bg-white/5 bg-black/5 border dark:border-white/10 border-black/10 dark:text-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 transition"
                                        placeholder="tu@email.com"
                                    />
                                </div>
                            </div>
                            
                            <div class="space-y-2">
                                <label for="subject" class="block text-sm font-medium dark:text-white text-gray-900">
                                    Asunto
                                </label>
                                <input 
                                    type="text" 
                                    id="subject" 
                                    name="_subject" 
                                    required 
                                    class="w-full px-4 py-3 rounded-lg dark:bg-white/5 bg-black/5 border dark:border-white/10 border-black/10 dark:text-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 transition"
                                    placeholder="Escribe aqui el asunto..."
                                />
                            </div>
                            
                            <div class="space-y-2">
                                <label for="message" class="block text-sm font-medium dark:text-white text-gray-900">
                                    Mensaje
                                </label>
                                <textarea 
                                    id="message" 
                                    name="message" 
                                    rows="6" 
                                    required 
                                    class="w-full px-4 py-3 rounded-lg dark:bg-white/5 bg-black/5 border dark:border-white/10 border-black/10 dark:text-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-purple-500 transition resize-none"
                                    placeholder="Escribe aqui tu mensaje..."
                                ></textarea>
                            </div>

                            <!-- reCAPTCHA v3 (invisible) -->
                            <input type="hidden" name="g-recaptcha-response" id="g-recaptcha-response">

                            <!-- Campo oculto para personalizar el email de respuesta -->
                            <input type="hidden" name="_replyto" value="davidvillard6@gmail.com">
                            <!-- Campo para habilitar reCAPTCHA en Formspree -->
                            <input type="hidden" name="_captcha" value="reCAPTCHA">
                            
                            <button 
                                type="submit" 
                                id="submit-button"
                                class="w-full px-6 py-3 rounded-full bg-purple-600 text-white font-medium hover:bg-purple-700 hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
                            >
                                Enviar mensaje
                            </button>

                            <!-- Mensaje de confirmación -->
                            <div id="form-message" class="hidden p-4 rounded-lg text-center"></div>
                            
                            <!-- Aviso de reCAPTCHA -->
                            <p class="text-xs text-center dark:text-gray-500 text-gray-500">
                                Este sitio está protegido por reCAPTCHA y se aplican las 
                                <a href="https://policies.google.com/privacy" target="_blank" class="hover:text-purple-500 underline">Políticas de Privacidad</a> y 
                                <a href="https://policies.google.com/terms" target="_blank" class="hover:text-purple-500 underline">Términos de Servicio</a> de Google.
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </SectionContainer>
    </main>
</Layout>

<!-- Cargar reCAPTCHA v3 -->
<script is:inline src="https://www.google.com/recaptcha/api.js?render=6LetcyQsAAAAAFLnb8TFCpAnH5vV3MxMnNFKkqP5"></script>

<script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const formMessage = document.getElementById('form-message') as HTMLDivElement;
    const submitButton = document.getElementById('submit-button') as HTMLButtonElement;

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Deshabilitar botón durante el envío
            submitButton.disabled = true;
            submitButton.textContent = 'Enviando...';
            
            // Mostrar mensaje de envío
            formMessage.textContent = 'Verificando y enviando mensaje...';
            formMessage.className = 'p-4 rounded-lg text-center dark:bg-white/5 bg-black/5 dark:text-gray-400 text-gray-600';
            formMessage.classList.remove('hidden');

            try {
                // Ejecutar reCAPTCHA v3
                // @ts-ignore
                const token = await grecaptcha.execute('6LetcyQsAAAAAFLnb8TFCpAnH5vV3MxMnNFKkqP5', { action: 'submit' });
                
                // Añadir el token al formulario
                const recaptchaInput = document.getElementById('g-recaptcha-response') as HTMLInputElement;
                if (recaptchaInput) {
                    recaptchaInput.value = token;
                }

                // Enviar formulario
                const formData = new FormData(form);
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                if (response.ok) {
                    formMessage.textContent = '¡Mensaje enviado con éxito! Te responderé pronto.';
                    formMessage.className = 'p-4 rounded-lg text-center bg-green-500/10 text-green-600 dark:text-green-400';
                    form.reset();
                    
                    // Ocultar mensaje después de 5 segundos
                    setTimeout(() => {
                        formMessage.classList.add('hidden');
                    }, 5000);
                } else {
                    throw new Error('Error al enviar el formulario');
                }
            } catch (error) {
                formMessage.textContent = 'Hubo un error al enviar el mensaje. Por favor, intenta nuevamente.';
                formMessage.className = 'p-4 rounded-lg text-center bg-red-500/10 text-red-600 dark:text-red-400';
                
                setTimeout(() => {
                    formMessage.classList.add('hidden');
                }, 5000);
            } finally {
                // Rehabilitar botón
                submitButton.disabled = false;
                submitButton.textContent = 'Enviar mensaje';
            }
        });
    }
</script>