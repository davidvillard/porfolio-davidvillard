        if (copyTimeout) clearTimeout(copyTimeout);
        copyTimeout = setTimeout(() => {
          tooltip.setAttribute("data-text-initial", "Copiar email");
        }, 1500);
      } catch (err) {
        console.error("No se pudo copiar al portapapeles", err);
      }
    });
  }
</script>
