---
interface Props {
  title: string;
  description: string;
  link: string;
  github?: string;
  image: string;
  tags: { name: string; class: string; icon: any }[];
}
const { title, description, link, github, image, tags } = Astro.props;
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "./icons/GitHub.astro";
---

<article class="flex flex-col bg-white/5 rounded-xl overflow-hidden ring-1 ring-white/10 shadow-lg w-full max-w-[500px] min-w-0 mx-auto">
  <a href={link} target="_blank" rel="noopener noreferrer" class="block">
    <img
      class="w-full aspect-square object-cover"
      src={image}
      alt={`Captura de ${title}`}
      loading="lazy"
    />
  </a>
  <div class="p-5 flex flex-col gap-3">
    <div class="flex items-center justify-between">
      <a href={link} target="_blank" rel="noopener noreferrer" class="text-xl font-semibold hover:text-yellow-200/80">
        {title}
      </a>
      {github && (
        <SocialPill href={github} aria-label="GitHub del proyecto">
          <GitHubIcon class="size-4" />
        </SocialPill>
      )}
    </div>
    <p class="text-sm text-white/80 text-pretty">{description}</p>
    <ul class="flex flex-wrap gap-2 mt-2">
      {tags.map((tag) => (
        <li>
          <span class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
            <tag.icon class="size-4" /> {tag.name}
          </span>
        </li>
      ))}
    </ul>
  </div>
</article>