---
import BriefCase from "../components/icons/BriefCase.astro";

// Experience.astro
const EXPERIENCE = {
  title: "Experiencia laboral",
  items: [
    {
      date: "Ene. 2025 - Presente",
      title: "Desarrollador Fullstack",
      company: "Gyleven",
      description: [
        "Desarrollo de aplicaciones web completas con React y Next.js, implementando autenticación, APIs RESTful y paneles de administración.",
        "Integración de mapas interactivos con geolocalización para mejorar la experiencia de navegación de eventos.",
        "Optimización de SEO y rendimiento web, logrando tiempos de carga significativamente más rápidos.",
        "Transformación de diseños Figma en componentes React reutilizables y escalables.",
        "Mantenimiento de coherencia entre WordPress/WooCommerce y la aplicación principal.",
      ],
      link: "https://www.linkedin.com/in/davidvillard",
    },
    {
      date: "Sept. 2024 - Dic. 2024",
      title: "Prácticas de Desarrollo",
      company: "Gyleven",
      description: [
        "Desarrollo de API REST en Django para automatización de verificación de contactos.",
        "Creación de sitio web WordPress desde mockups de Figma con enfoque en UX/UI.",
        "Aprendizaje continuo y adaptación rápida a nuevas tecnologías y metodologías.",
      ],
      link: "https://www.linkedin.com/in/davidvillard",
    },
  ],
};
---

<section class="py-24 md:py-0 px-6 md:px-8">
  <div class="mx-auto max-w-4xl">
    <!-- Título de sección -->
    <h2 class="flex items-center gap-x-3 text-3xl md:text-5xl font-semibold tracking-tight dark:text-white text-gray-900 mb-16 text-left">
      <BriefCase class="size-12" />
      {EXPERIENCE.title}
    </h2>

    <!-- Timeline -->
    <div class="relative">
      {EXPERIENCE.items.map((experience, index) => (
        <div class="relative pb-16 last:pb-0">
          <!-- Línea vertical -->
          <div class="absolute left-0 top-0 bottom-0 w-px bg-gradient-to-b from-gray-200 via-gray-300 to-transparent dark:from-gray-800 dark:via-gray-700"></div>
          
          <!-- Punto del timeline -->
          <div class="absolute left-0 top-1 -translate-x-1/2">
            <div class="relative">
              <div class="w-3 h-3 rounded-full bg-purple-500 ring-4 ring-white dark:ring-gray-950"></div>
              <div class="absolute inset-0 w-3 h-3 rounded-full bg-purple-500 animate-ping opacity-75"></div>
            </div>
          </div>

          <!-- Contenido -->
          <div class="pl-8 md:pl-12">
            <!-- Fecha -->
            <time class="inline-block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">
              {experience.date}
            </time>

            <!-- Título y empresa -->
            <h3 class="text-xl md:text-2xl font-semibold dark:text-white text-gray-900 mb-1">
              <a
                href={experience.link}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-purple-500 dark:hover:text-purple-400 transition-colors duration-200"
              >
                {experience.title}
              </a>
            </h3>
            <p class="text-base font-medium text-gray-600 dark:text-gray-400 mb-4">
              {experience.company}
            </p>

            <!-- Descripción -->
            <ul class="space-y-3">
              {experience.description.map((item) => (
                <li class="flex gap-3 text-gray-600 dark:text-gray-400 leading-relaxed">
                  <span class="text-purple-500 flex-shrink-0">•</span>
                  <span class="text-sm md:text-base">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
@keyframes ping {
  75%, 100% {
    transform: scale(2);
    opacity: 0;
  }
}

.animate-ping {
  animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
}
</style>